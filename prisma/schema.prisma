generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Model {
  id           String         @id @default(nanoid())
  name         String         @unique
  basePrompt   String
  Conversation Conversation[]
}

model Conversation {
  id       String    @id @default(nanoid())
  userId   String
  modelId  String
  model    Model     @relation(fields: [modelId], references: [id])
  messages Message[]
}

enum Role {
  user
  model
}

model Message {
  id             String       @id @default(nanoid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  role           Role
  text           String
  createdAt      DateTime     @default(now())
}

model User {
  id        String @id @unique
  email     String @unique
  name      String
  image     String
}
